<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bwastedsoftware.district_7570_conference.SpeakerFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/speakerPic"
        android:layout_width="137dp"
        android:layout_height="138dp"
        app:srcCompat="@drawable/ic_account_circle_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

    <TextView
        android:id="@+id/speakerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speakerPic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Speaker Name"
        android:textColor="@color/authui_colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/bioLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speakerName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Speaker Title"
        android:textColor="@color/authui_colorPrimaryDark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/webPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bioLink"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Speaker Hyperlink"
        android:textSize="24sp"
        android:autoLink="web"/>
</RelativeLayout>

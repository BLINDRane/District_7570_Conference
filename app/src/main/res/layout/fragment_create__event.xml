<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bwastedsoftware.district_7570_conference.Create_EventFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/edit_speakerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Event Title"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_speakerName"
        android:ems="10"
        android:hint="Event Location"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_When"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Event Time"
        android:inputType="textPersonName"
        android:layout_below="@+id/edit_Date"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/edit_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Event Date"
        android:inputType="textPersonName"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/edit_Location"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edit_Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Event Details"
        android:inputType="textMultiLine"
        android:layout_below="@+id/spinner_Speakers"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_Save_Event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Event"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp" />

    <Spinner
        android:id="@+id/spinner_Speakers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_When"
        android:layout_marginTop="20dp"
        android:spinnerMode="dialog"
        android:prompt="@string/spinner_hint"/>
</RelativeLayout>
